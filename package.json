{
  "name": "angular2-translate",
  "version": "3.0.1",
  "description": "Simple translate for angular2",
  "bin": {
    "semantic-release": "bin/semantic-release.js"
  },
  "keywords": [
    "angular",
    "angular2",
    "translate",
    "i18n"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist/* && babel lib --out-dir dist --source-maps",
    "test": "nyc --require babel-register ava",
    "coverage": "npm test && nyc report --reporter=text-lcov | coveralls",
    "prepublish": "npm test && npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "ava": {
    "files": [
      "test/*.spec.js"
    ],
    "failFast": true,
    "serial": true,
    "tap": true,
    "verbose": true
  },
  "release": {
    "verifyConditions": {
      "path": "./node_modules/semantic-release/dist/lib/plugin-verify.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Valetudox/angular2-translate.git"
  },
  "author": "Viktor Somodi <viktor.somodi@emarsys.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Valetudox/angular2-translate/issues"
  },
  "homepage": "https://github.com/Valetudox/angular2-translate#readme",
  "dependencies": {
    "sprintf-js": "^1.0.3",
    "flat": "^1.6.0"
  },
  "devDependencies": {
    "angular2": "^2.0.0-beta.0",
    "ava": "^0.11.0",
    "babel-cli": "^6.2.0",
    "babel-plugin-angular2-annotations": "3.1.0",
    "babel-plugin-transform-class-properties": "6.3.13",
    "babel-plugin-transform-decorators": "^6.3.13",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-flow-strip-types": "6.3.15",
    "babel-preset-es2015": "^6.1.18",
    "babel-register": "^6.3.13",
    "chai": "^3.4.1",
    "coveralls": "^2.11.6",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.34.0",
    "mocha": "^2.3.4",
    "nyc": "^5.1.1",
    "reflect-metadata": "^0.1.2",
    "rxjs": "5.0.0-beta.0",
    "semantic-release": "^4.3.5",
    "zone.js": "^0.5.10"
  }
}
